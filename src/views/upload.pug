extends base

block content 
    div
        video#preview
        button#startBtn Start Recording
    if errorMessage 
        span=errorMessage 
    
    form(method="post" enctype="multipart/form-data")
        label(for="video") Upload Video
        input(type="file", name="video", id="video" required accept="video/*")
        input(type="text", name="title", placeholder="title", ,maxlength=80 , required)
        input(type="text", name="description", placeholder="description", minlength=20, required)
        input(type="text", name="hashtags", placeholder="hashtags separated by comma", required)
        input(type="submit", value="upload Video")

block scripts
    script(src="/static/js/recorder.js") 
