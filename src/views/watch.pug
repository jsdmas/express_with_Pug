extends base.pug 

block content 
    div 
        p=video.description
        small=video.createdAt
        br
        a(href=`/users/${video.owner._id}`) #{video.owner.name} Ïùò Profile 
    video(src="/"+ video.fileUrl, width="1000" height="400", controls) 

    if String(video.owner._id) === String(loggedInUser._id)
        a(href=`${video.id}/edit`) Edit Video &rarr;
        br
        a(href=`${video.id}/delete`) Delete Video &rarr;