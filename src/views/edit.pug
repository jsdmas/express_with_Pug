extends base.pug

block content 
    form(method="post")
        input(name="title" type="text" placeholder=video.title value=video.title required maxlength=80)
        input(type="text", name="description", placeholder="description", minlength=20, required value=video.description)
        input(type="text", name="hashtags", placeholder="hashtags separated by comma", required value=video.hashtags.join())
        input(type="submit" value="Save")
    